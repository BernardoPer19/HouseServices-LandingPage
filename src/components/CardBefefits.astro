---
// Importaci√≥n de interfaces para asegurar el tipado correcto.
interface BenefitProps {
  text: string;
  img: string;
  title: string;
  data_aos: string;
  data_aos_easing: string;
  data_aos_offset: string;
}

const { img, text, title, data_aos, data_aos_easing, data_aos_offset } = Astro.props;
---

<div
  class="flex flex-col gap-5 justify-center items-center w-60"
  data-aos={data_aos}
  data-aos-easing={data_aos_easing} 
  data-aos-offset={data_aos_offset}
>
  <img class="rounded-full size-56" src={img} alt={title} />
  <h1 class="text-xl font-semibold">{title}</h1>
  <p class="text-wrap text-neutral-500">{text}</p>
  <button
    class="w-full p-3 mt-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition flex items-center justify-center gap-3"
  >
    send a message
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-send mt-1" viewBox="0 0 16 16">
      <path
        d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"
      ></path>
    </svg>
  </button>
</div>
