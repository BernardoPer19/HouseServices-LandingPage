---
// Interfaz para asegurar el tipado correcto de las props
interface PersonalCardProps {
  img: string;
  name: string;
  role: string;
  experience: number;
  studies: string;
  data_aos: string;
  data_aos_easing: string;
  data_aos_offset: string;
}

const { img, name, role, experience, studies, data_aos, data_aos_easing, data_aos_offset } = Astro.props;
---

<div
  class="max-w-sm bg-white rounded-lg shadow-lg overflow-hidden"
  data-aos={data_aos}
  data-aos-easing={data_aos_easing}
  data-aos-offset={data_aos_offset}
>
  <img src={img} alt={name} class="w-full h-56 object-cover" />

  <div class="p-6">
    <h2 class="text-2xl font-semibold text-cyan-500 mb-2">{name}</h2>
    <p class="text-lg text-gray-700 mb-4">{role}</p>

    <ul class="text-gray-600 space-y-2">
      <li><strong>Experience:</strong> {experience} years</li>
      <li><strong>Studies:</strong> {studies}</li>
    </ul>

    <button
      class="w-full p-3 mt-2 bg-cyan-500 text-white rounded-lg hover:bg-cyan-600 transition flex items-center justify-center gap-3"
    >
      Contact Now
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="16"
        height="16"
        fill="currentColor"
        class="bi bi-send mt-1"
        viewBox="0 0 16 16"
      >
        <path
          d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576zm6.787-8.201L1.591 6.602l4.339 2.76z"
        ></path>
      </svg>
    </button>
  </div>
</div>
